@import('normalize.css')

html
body
  width                 100%
  height                100%

body
  background            #dedede

.todo-list
  width                 400px
  height                400px
  padding               20px
  background            #fff
  border-radius         5px
  left                  50%
  top                   50%
  margin                -200px 0 0 -200px
  overflow              scroll
  position              absolute
  box-sizing            border-box
  box-shadow            0 2px 1px rgba(0, 0, 0, .2)

  .todo-item
    width               100%
    padding             10px
    position            relative

    &~.todo-item
      border-top        1px solid #d4e0dc
      box-sizing        border-box

    h3
      color             #33a37a
      display           block
      padding           10px 0 10px 30px
      margin            0
      font-size         20px

    p
      color             #b0b0b0
      padding           0 0 0 30px
      margin            0
      font-size         16px

    .check-button
    .remove-button
      position          absolute
      top               22px
      left              10px
      display           block
      width             20px
      height            20px
      border-radius     5px
      background        none
      border            3px solid #9ba6a2
      text-align        center
      font-size         12px
      line-height       15px
      padding           0
      color             #fff
      outline           none

    .remove-button
      top               52px
      border-radius     50%
      font-weight       bold
      color             #cdd6d3

    &.checked
      text-decoration   line-through

      .check-button
        background      #0ebe7e
        border-color    #0f9363

  form
    input
    textarea
      width             100%
      height            30px
      margin            10px 0 0
      padding           0
      border            none
      background        #f9f9f9
      border-bottom     2px solid #cdd6d3
      line-height       30px
      text-indent       10px

    button
      display           block
      background        #0ebe7e
      border            1px solid #0f9363
      width             100%
      height            35px
      border-radius     5px
      color             #fff
      padding           0
      margin            10px 0 0














